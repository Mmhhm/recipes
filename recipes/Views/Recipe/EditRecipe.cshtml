@model recipes.Models.Recipe

@{
    ViewData["Title"] = "EditRecipe";
}

<h1>EditRecipe</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRecipe">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="id" class="form-control" type="hidden"/>
            </div><br />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Ingredients" class="control-label"></label>
                @for (int i = 0; i < Model.Ingredients.Count(); i++)
                {
                    <input asp-for="Ingredients[i]" class="form-control" />
                    
                    <br />
                }
            </div>
            <div class="form-group">
                <label asp-for="Phases" class="control-label"></label>
                @for (int i = 0; i < Model.Phases.Count(); i++)
                {
                    <input asp-for="Phases[i]" class="form-control" />

                    <br />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
